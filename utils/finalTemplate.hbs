<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ID Cards</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      *{
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
      }
    </style>
  </head>
  <body>
  <br><br>
    <h1 class="text-center">EXTERNAL PARTICIPATION</h1>
    <h4 class="text-center">Zolo-Ryan &amp; World</h4>
    <p class="text-center" id="rand">UniqueID: </p>
      <div class="container">
        <br /><br /><br /><br />
        <div class="d-flex justify-content-between" style="gap: 10px;">
          <div class="left" style="flex-grow: 1; font-weight: 900;">
            Team Name: {{data.teamName}} <br>
          </div>
          <div class="right" style="flex-grow: 1; display: flex; justify-content: flex-end;">
            <img
            {{!-- when uploading online, use https://hostname/{{data.photo}} --}}
              src="{{data.photo}}" 
              class="img-thumbnail" 
              style="width: 50%; height: 200px;"
              alt="Loading"
            />
          </div>
          
        </div>
        <br /><br />
        <table class="table" style="font-weight: 900;">
          <tr>
            <td>Fullname</td>
            <td>{{data.username}}</td>
          </tr>
          <tr>
            <td>College</td>
            <td>{{data.college}}</td>
          </tr>
          <tr>
            <td>Date Of Arrival</td>
            <td>{{data.date}}</td>
          </tr>
          <tr>
            <td>Time of Arrival</td>
            <td>{{data.time}}</td>
          </tr>
          <tr>
            <td>Gender</td>
            <td>{{data.gender}}</td>
          </tr>
          <tr>
            <td>Plan</td>
            <td>{{data.plan}}</td>
          </tr>
          <tr>
            <td>Event</td>
            <td>{{data.event}}</td>
          </tr>
          <tr>
            <td>Phone No.</td>
            <td>{{data.contact}}</td>
          </tr>
        </table>
    <img src="sign1.png" alt="pic sign">
  </body>
  <script>
    const rand = document.getElementById("rand");
    rand.innerHTML += Math.floor(Math.random()*1000000)+ " ZOLO-RYAN";
  </script>
</html>